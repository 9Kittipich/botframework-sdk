{
    "env": {
        "commonjs": true,
        "es2020": true,
        "node": true
    },
    "extends": [
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": 9,
        "sourceType": "module",
        "ecmaFeatures": {
            "impliedStrict": true
        }
    },
    "rules": {
        "semi": ["error", "always"],
        "no-return-await": 0,
        "space-before-function-paren": ["error", {
            "named": "never",
            "anonymous": "never",
            "asyncArrow": "always"
        }],
        "quotes": ["error", "single", {"allowTemplateLiterals": true}],
        "template-curly-spacing": ["error", "always"]
    }
}
